<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>

        <%= f.input :address %>
        <%= f.input :phone_number %>
        <h3 style="text-align:left;">Category: <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"]%></h3>
        <h1></h1>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
